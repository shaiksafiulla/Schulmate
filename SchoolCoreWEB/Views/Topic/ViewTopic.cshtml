@model SchoolCoreWEB.Models.VTopic
@using Localization.Services
@inject LanguageService _localization

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="row">
                        <div class="col-5">
                            <label>@_localization.Getkey("Name") : </label>
                        </div>
                        <div class="col-7">
                            @Html.DisplayFor(model => model.Name)
                        </div>
               </div> 
               <div class="row">
                        <div class="col-5">
                    <label>@_localization.Getkey("Class") : </label>
                        </div>
                        <div class="col-7">
                            @Html.DisplayFor(model => model.ClassName)
                        </div>
               </div>   
               <div class="row">
                        <div class="col-5">
                    <label>@_localization.Getkey("Subject") : </label>
                        </div>
                        <div class="col-7">
                            @Html.DisplayFor(model => model.SubjectName)
                        </div>
               </div>   
               <div class="row">
                        <div class="col-5">
                    <label>@_localization.Getkey("Description") : </label>
                        </div>
                        <div class="col-7">
                            @Html.DisplayFor(model => model.Description)
                        </div>
               </div>              
          
        </div>
    </div>   
</div>
