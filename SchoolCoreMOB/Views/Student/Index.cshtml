@model IEnumerable<MbStudent>
@using Localization.Services
@inject LanguageService _localization
@inject IConfiguration Configuration
@inject IHttpContextAccessor HttpContextAccessor
@{    
    string strtoken= @HttpContextAccessor.HttpContext.Session.GetString("strtoken");
    string userParamkey = @HttpContextAccessor.HttpContext.Session.GetString("UserParam");    
}

<style>
     .autocomplete-suggestions {
            border: 1px solid #ccc;
            max-height: 400px;
            overflow-y: auto;
            position: absolute;
            background: #fff;
            width: 350px;
            z-index: 1000;
            border-radius: 8px; /* Rounded corners for the suggestion container */
        }

        .autocomplete-suggestion {
            padding: 15px;
            display: flex;
            align-items: flex-start;
            border-bottom: 1px solid #eee;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .autocomplete-suggestion:hover {
            background-color: #f5f5f5;
        }

        .student-card {
            display: flex;
            flex-direction: row;
            align-items: flex-start;
            width: 100%;
            position: relative; /* This is needed to align "View Profile" at the top-right */
        }

        .student-card img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            object-fit: cover;
            margin-right: 15px;
            margin-top: 5px; /* Align the image to the top */
        }

        .student-details {
            flex-grow: 1;
            padding-top: 5px; /* Align the text to top with the image */
        }

        .student-name {
            font-size: 16px;
            font-weight: bold;
            color: #333;
            margin-bottom: 5px;
        }

        .student-email {
            color: #666;
            font-size: 14px;
            margin-bottom: 5px;
        }

        .student-phone {
            color: #777;
            font-size: 12px;
            margin-bottom: 5px;
        }

        .view-profile {
            position: absolute;
            top: 5px; /* Align to the top-right corner */
            right: 10px;
            text-decoration: none;
          /*  color: .color-highlight;*/
            font-size: 12px;
        }

        .view-profile:hover {
            text-decoration: underline;
        }

        /* Optional: Add a subtle shadow to the card */
        .autocomplete-suggestion {
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .autocomplete-suggestion:last-child {
            border-bottom: none;
        }
</style>
